<body class="">
    <a href="#"  onclick="history.back();" class="animated bounceInDown" style="position:absolute; background-color: rgba(0, 0, 0, 0.6); padding: 5px;top: 0; left: 0; "><i class="medium material-icons" style="color: #fff;">chevron_left</i></a>
<div class="bg"> 
<div class="row">
<div class="container">
<div class="parentbox">
    <div class="childbox">
   
       <h3><i class="material-icons prefix">face </i> Pre-Registered Visitors <span></span></h3>
           <div class="">
            <form class="" action="/sendemail" method="POST">
       <div class="input-field col s5">
          <i class="material-icons prefix">account_circle</i>
          <input id="FName" type="text" name = "FName" class="validate" required="required">
          <label for="icon_prefix">First Name</label>
        </div>
      <div class="col s2">&nbsp;</div>
       <div class="input-field col s5">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" name="LName" class="validate" required="required">
          <label for="icon_prefix">Last Name</label>
        </div>
         <div class="input-field col s5">
          <i class="material-icons prefix">business_center</i>
          <input id="icon_prefix" type="text" name ="CName" class="validate" required="required">
          <label for="icon_prefix">Company Name</label>
        </div>
      <div class="col s2">&nbsp;</div>
       <div class="input-field col s5">
          <i class="material-icons prefix">email</i>
          <input id="icon_prefix" type="email" name="Email" class="validate" >
          <label for="icon_prefix">Email Address</label>
        </div>
         <div class="input-field col s5">
          <i class="material-icons prefix">record_voice_over</i>
          <input id="icon_prefix" type="text"  name="Host" class="validate" required="required">
          <label for="icon_prefix">Visiting(Host Name)</label>
        </div>
         <div class="col s2">&nbsp;</div>
        <div class="input-field col s5">
          <i class="material-icons prefix">email</i>
          <input id="hemail" type="email" name="hemail" class="validate"required="required">
          <label for="icon_prefix">Host Email Address</label>
        </div>
      
       <div class="input-field col s5">
          <i class="material-icons prefix">flag</i>
          <select name="PofMeet" >
              <option value=""  selected>Choose your option</option>
              <option value="Meeting">Meeting</option>
              <option value="Interview">Interview</option>
              <option value="Temporary Employee">Temporary Employee</option>
              <option value="Personal">Personal(Family/Friend)</option>
              <option value="Delivery">Delivery</option>
            </select>
          <label for="icon_prefix">Purpose Of the Visit </label>
        </div>
        <div class="col s2">&nbsp;</div>
        <div class="input-field col s5">
          <i class="material-icons prefix">tablet_android</i>
          <input id="Phone" type="tel" name="Phone" class="validate"required="required">
          <label for="icon_prefix">Mobile Number</label>
        </div>
        <div class="input-field col s5">
            <i class="material-icons prefix">event</i>
            <input id="Date" type="date" class="datepicker" placeholder="DD/MM/YYYY" name="Date" class="validate"required="required">
            <label for="icon_prefix">Date Of Visit</label>
          </div>
        <input type="hidden"  id="yourDatePicker" name="yourDatePicker"/>  
        <input type="hidden"  id="nameSearch" name="nameSearch" />

<div class="input-field col s7">
          <p></p>
         <!-- <label for="icon_prefix"></label> -->
        </div>
    
         </div>
        
         <button class="waves-effect waves-light btn default" type="submit" name="action" id="buttonc">Next <i class="material-icons prefix">navigate_next</i></button>
    </div>
</div>

</div>
</div>
</form>
</div>

<script>
 
 $(document).ready(function () {
  $(".datepicker").pickadate({
    closeOnSelect: true,
    format: "dd/mm/yyyy"
  });
});
  
  </script>
  
<script>   
          
    const alert = <%= alert %>;
      if (alert === true) {
        swal("Yes", "Email Sent", "success");
      }
    </script>

<script>


document.getElementById("yourDatePicker").value = new Date().getTime();


$("#FName").change(function() {
    $("#nameSearch").val($("#FName").val().substring(0,3)+$("#Phone").val().substring(0,4)+ $("#yourDatePicker").val().substring(8,12));
});
$("#buttonc").click(function() {
    $("#nameSearch").val($("#FName").val().substring(0,3)+$("#Phone").val().substring(0,4)+ $("#yourDatePicker").val().substring(8,12));
});

</script>


</body>
</html>



